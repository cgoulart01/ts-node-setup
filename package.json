{
  "name": "rpg_project",
  "version": "1.0.0",
  "main": "index.js",
  "devDependencies": {
    "@babel/preset-typescript": "^7.25.7",
    "@eslint/js": "^9.12.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.5",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1"
  },
  "scripts": {
    "build": "tsc-alias && tsc",
    "test": "jest --passWithNoTests",
    "test:watch": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests --bail",
    "test:push": "yarn test --coverage",
    "start": "node dist/index.js",
    "start:dev": "nodemon --watch 'src/' --exec  'ts-node -r tsconfig-paths/register src/index.ts' -e ts ",
    "lint": "eslint",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn eslint --fix",
      "yarn prettier"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "packageManager": "yarn@4.5.0"
}
